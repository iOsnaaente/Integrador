<DiganosticosScreenView>:
    md_bg_color: app.theme_cls.bg_darkest
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)
    
    # Preenche o fundo da tela 
    MDBoxLayout:
        md_bg_color: 1,1,1,0.1
        size_hint: 1, 1 
        orientation: 'horizontal'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}        
        padding: ('110sp', '10dp', '10dp', '10dp')
        spacing: '10dp'
        
        # Delimita o espaço da SideBar 
        MDBoxLayout:
            id: main_area
            size_hint: 0.75, 1
            pos_hint: {'right': 0.75, 'top': 1.0}
            orientation: 'vertical'
            spacing: sp(10)
            radius: sp(15)
            
            # Cabeçalho com a descrição da view
            MDBoxLayout:
                size_hint: 1, 0.05
                pos_hint: {'center_x': 0.5, 'center_y': 0.5 }
                orientation: 'vertical'
                spacing: sp(10)
                radius: sp(15)
                MDLabel:
                    text: "Diagnóstico - Relatórios do Sistema de Rastreamento"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5 }
                    size_hint: 1, 1 
                    font_style: "H5"
                    halign: "center"
                    height: self.texture_size[1]
            
            # Seletor de datas (início e fim)
            MDBoxLayout:
                size_hint: 0.5, 0.15
                pos_hint: {'center_x': 0.5, 'center_y': 0.5 }
                orientation: 'horizontal'
                spacing: sp(25)
                padding: sp(15)
                radius: sp(15)
                # Botão para selecionar data 
                MDRaisedButton:
                    id: date_range
                    pos_hint: { "center_x" : 0.5, "center_y" : 0.5 }
                    size_hint: 0.3, 0.3  
                    text: "Selecionar a Data"
                    on_release:
                        root.show_date_picker( self )

                # TextField para data inicial da busca  
                MDTextField:
                    id: start_date 
                    pos_hint: { "center_x" : 0.5, "center_y" : 0.5 }
                    size_hint: 0.3, 0.75 
                    
                # TextField para data final da busca  
                MDTextField:
                    id: end_date
                    pos_hint: { "center_x" : 0.5, "center_y" : 0.5 }
                    size_hint: 0.3, 0.75


            
            # Área para o gráfico de preview de geração solar
            MDBoxLayout:
                size_hint: 1, 0.75
                pos_hint: {'center_x': 0.5, 'center_y': 0.5 }
                orientation: 'vertical'
                spacing: sp(15)
                padding: sp(15)
                radius: sp(15)
                MDLabel:
                    text: "Gráfico de Geração Solar (Preview)"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5 }
                    size_hint: 0.9, 0.1
                    halign: "center"
                MDCard:
                    id: graph_zone
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5 }
                    size_hint: 0.9, 0.9
                    spacing: sp(15)
                    padding: sp(15)
                    radius: sp(15)
            

            # Botão para gerar o relatório
            MDBoxLayout:
                size_hint: 0.5, 0.05
                pos_hint: {'center_x': 0.5, 'center_y': 0.5 }
                orientation: 'vertical'
                spacing: sp(10)
                radius: sp(15)
                MDRaisedButton:
                    text: "Gerar Relatório"
                    size_hint: 0.5, 0.5 
                    pos_hint: {"center_x": 0.5, "center_y": 0.5 }
                    on_release: root.gerar_relatorio()
    
    # float content 
    MDFloatLayout:
        id: float_content
        size_hint: 1, 1    
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'horizontal'