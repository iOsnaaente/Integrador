#:import MapView kivy.garden.mapview.MapView 

<MapScreenView>
    zenite_graph: zenite_graph
    azimute_graph: azimute_graph
    
    md_bg_color: app.theme_cls.bg_darkest
    
    MDFloatLayout:
        id: float_content 
        size_hint: 1, 1    
        orientation: 'horizontal'

    MDFloatLayout:
        MDBoxLayout: 
            size_hint: None, 0.8
            size: dp(300), 0.8
            md_bg_color: [0.3, 0.3, 0.3, 0.85]
            pos_hint: {'right': 0.975,'top': 0.975 }
            orientation: 'vertical'
            radius: 20
            padding: 20 
            spacing: 10 
        
            #
            # Hora real 
            #
            MDCard:
                size_hint: 1, 0.2
                orientation: 'vertical'
                md_bg_color: [0.5, 0.5, 0.5, 0.75]
                padding: 10 
                MDLabel: 
                    size_hint: 1, 0.1
                    text: 'Informações reais '
                    halign: 'center'
                    bold: True 
                    font_size: 14
                MDGridLayout:
                    cols: 2 
                    size_hint: 1, 0.9
                    spacing: 1
                    MDLabel:    
                        text: 'Hora atualizada'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDLabel: 
                        id: hora_att 
                        text: '01:23:45'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                    MDLabel:    
                        text: 'Dia atualizado'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDLabel: 
                        id: dia_att
                        text: '28/03/23'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                    MDLabel:    
                        text: 'Progresso do sol'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDProgressBar:
                        id: hora_att_sun_progress
                        size_hint: 0.5, 0.33
                        size: 1, dp(50)
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        value: 50 

            #
            # Hora do sistema 
            #
            MDCard:
                size_hint: 1, 0.2
                orientation: 'vertical'
                md_bg_color: [0.5, 0.5, 0.5, 0.75]
                padding: 10 
                MDLabel: 
                    size_hint: 1, 0.1
                    text: 'Informações do sistema'
                    halign: 'center'
                    bold: True 
                    font_size: 14
                MDGridLayout:
                    cols: 2 
                    size_hint: 1, 0.9
                    spacing: 1
                    MDLabel:    
                        text: 'Hora atualizada'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDLabel: 
                        id: hora_sys 
                        text: '01:23:45'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                    MDLabel:    
                        text: 'Dia atualizado'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDLabel: 
                        id: dia_sys 
                        text: '28/03/23'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                    MDLabel:    
                        text: 'Progresso do sol'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDProgressBar:
                        id: dia_sys_sun_progress
                        size_hint: 0.5, 0.33
                        size: 1, dp(50)
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        value: 50 

            MDCard: 
                size_hint: 1, 0.3
                orientation: 'vertical'
                md_bg_color: [0.5, 0.5, 0.5, 0.75]
                padding: 10 
                MDLabel: # Informações geograficas 
                    size_hint: 1, 0.1
                    text: 'Informações geograficas'
                    halign: 'center'
                    bold: True 
                    font_size: 14
                MDGridLayout:
                    cols: 2 
                    size_hint: 1, 0.9
                    spacing: 1
                    MDLabel:    # Latitude
                        text: 'Latitude (º)'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDLabel: 
                        id: latitude 
                        text: '35.43464684'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                    MDLabel:    # Longitude 
                        text: 'Longitude (º)'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDLabel: 
                        id: longitude
                        text: '35.43464684'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                    MDLabel:    # Altitude
                        text: 'Altitude (m)'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDLabel: 
                        id: altitude
                        text: '35.43464684'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                    MDLabel:    # Horas de sol 
                        text: 'Horas de sol (h)'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDLabel: 
                        id: daylight
                        text: '10h 38min 24s'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}

            MDCard:
                orientation: 'vertical'
                size_hint: 1, 0.3
                md_bg_color: [0.5, 0.5, 0.5, 0.75]
                MDLabel: 
                    size_hint: 1, 0.1
                    text: 'Informações de interesse'
                    halign: 'center'
                    bold: True 
                    font_size: 14
                MDGridLayout:
                    cols: 2 
                    size_hint: 1, 0.9
                    spacing: 1
                    MDLabel:    # Nascer do sol 
                        text: 'Nascer do sol (hh:mm:ss)'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDLabel: 
                        id: rising
                        text: '06:13:34'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                    MDLabel:    # Culminante
                        text: 'Culminante (hh:mm:ss)'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDLabel: 
                        id: culminant
                        text: '12:03:41'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                    MDLabel:    # Por do sol 
                        text: 'Pôr do sol (hh:mm:ss)'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
                        font_size: 14
                        halign: 'left'
                    MDLabel: 
                        id: sunset 
                        text: '18:45:42'
                        size_hint: 0.5, 0.33
                        pos_hint: {'center_x': 0.50,'center_y': 0.50}
        
        #
        # Hover plot 
        #
        MDBoxLayout:
            size_hint: 0.6, 0.3
            pos_hint: {'right': 0.685,'top': 0.325}
            radius: 20
            spacing: 20
            padding: 5 
            MDCard:
                id: zenite_graph
                size_hint: 0.5, 1
                orientation: 'vertical'
                radius: self.parent.radius
                
            MDCard:
                id: azimute_graph
                size_hint: 0.5, 1
                orientation: 'vertical'
                radius: self.parent.radius
                