<SensorScreenView>
    md_bg_color: app.theme_cls.bg_darkest

    MDBoxLayout:
        size_hint: 1, 1 
        orientation: 'horizontal'
        pos_hint: {'center_x': 0.5,'center_y': 0.5}        
        padding: ('110sp', '10dp', '10dp', '10dp')
        spacing: '10dp'
        
        MDBoxLayout:
            size_hint: 0.75, 1
            pos_hint: {'right': 0.75,'top': 1.0}
            orientation: 'vertical'
            spacing: sp(10)
            radius: sp(15) 
        
            #
            # Tela de visualização do sisteam 
            #
            MDFloatLayout: 
                size_hint: 1, 0.7
                pos_hint: {'center_x': 0.5,'top': 1.0}

                FitImage: 
                    size_hint: 1, 1
                    source: root.model.background 
                    pos_hint: { 'center_x': 0.5,'center_y': 0.5 }
                    radius: sp(15) 

                FitImage: 
                    source: root.model.painel_solar
                    color: 0.5,0.5,0.8,1
                    size_hint: 0.75, 0.75
                    pos_hint: {'center_x': 0.65,'center_y': 0.375}
                
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.3, 0.20
                    pos_hint: {'center_x': 0.20,'center_y': 0.75}
                    padding: sp(10), 0, 0, 0
                    spacing: sp(5)
                    radius: sp(5)
                    md_bg_color: 0.5, 0.5, 0.5, 0.5
                    MDLabel:
                        text: "Atuador de Azimute"
                        color: 'white'
                        font_size: sp(16) 
                        halign: 'center'
                        bold: True 
                    MDBoxLayout:    
                        Image: 
                            size_hint: 0.3, 1
                            source: root.model.motor_vertical
                        MDLabel:
                            id: label_motor_vertical 
                            text: 'Vel: --.--rad/s'
                            
                    MDBoxLayout:    
                        Image: 
                            size_hint: 0.3, 1
                            source: root.model.sensor_motores
                        MDLabel:
                            id: label_encoder_vertical 
                            text: 'Pos: --.--º'
            
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.3, 0.2
                    pos_hint: {'center_x': 0.20,'top': 0.35}
                    padding: sp(10), 0, 0, 0
                    spacing: sp(5)
                    radius: sp(5)
                    md_bg_color: 0.5, 0.5, 0.5, 0.5
                    MDLabel:
                        text: "Atuador de Zenite"
                        color: 'white'
                        font_size: sp(16)  
                        halign: 'center'
                        bold: True 
                    MDBoxLayout:    
                        Image: 
                            size_hint: 0.3, 1
                            source: root.model.motor_horizontal
                        MDLabel:
                            id: label_motor_horizontal 
                            text: 'Vel: --.-- rad/s'
                    MDBoxLayout:    
                        Image: 
                            size_hint: 0.3, 1
                            source: root.model.sensor_motores
                        MDLabel:
                            id: label_encoder_horizontal
                            text: 'Pos: --.--º'
                
                MDBoxLayout:
                    size_hint: 0.2, 0.075
                    pos_hint: {'right': 0.95,'top': 0.95}
                    radius: sp(5)
                    md_bg_color: 0.5,0.5,0.5,0.5
                    MDIconButton:
                        id: icon_system_status
                        icon: 'circle'
                        theme_icon_color: 'Custom'
                        icon_color: 'red' 
                    MDLabel:
                        id: label_system_status
                        text: 'Sistema offline'
                        font_size: sp(16) 
                        halign: 'center'

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.2, 0.05
                    pos_hint: {'center_x': 0.85,'center_y': 0.2}
                    padding: sp(20)
                    spacing: sp(20)
                    radius: sp(5)
                    md_bg_color: 0.5, 0.5, 0.5, 0.5
                    MDIconButton:
                        id: icon_geracao
                        icon:'lightbulb-on'
                        size_hint: 0.1, 1
                        pos_hint: {'rigth': 0.05,'center_y': 0.5}
                        theme_icon_color: 'Custom'
                        icon_color: 'gray' 
                    MDLabel:
                        id: label_geracao
                        pos_hint: {'rigth': 0.3,'center_y': 0.5}
                        text: 'Sem informações'
                        bold: True 
                        font_size: sp(16)
                        halign: 'left'
                        valign: 'center'

            #
            # Tela do CMD do sistema 
            #
            MDCard: 
                size_hint: 1, 0.3
                md_bg_color: 0.5, 0.5, 0.5, 0.5 
                orientation: 'vertical'
                padding: sp(10)
                spacing: sp(5)
                radius: sp(15)
                MDLabel: 
                    size_hint: 0.95, 0.1 
                    pos_hint: {'center_x': 0.50,'top': 1.0 }
                    text: 'CMD sistema:'
                    color: 'white'
                    bold: True 
                    font_size: sp(16)
                MDCard:
                    size_hint: 0.95, 0.9
                    pos_hint: {'center_x': 0.50,'center_y': 0.45 }
                    MDLabel:
                        text: '...'
                        font_size: sp(12)
                        color: 'white'
                        valign:'bottom'
        #
        # Tela das Tags 
        #
        MDCard: 
            id: tag_space
            md_bg_color: 0.5, 0.5, 0.5, 0.5 
            size_hint: 0.25, 1 
            pos_hint: {'right': 0.975,'top': 1.0}
            orientation: 'vertical'
            radius: sp(15)
            MDLabel:
                text: 'Sistema não conectado'
                valign: 'center'
                halign: 'center'
    #
    # float content 
    #
    MDFloatLayout:
        id: float_content 
        size_hint: 1, 1    
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        orientation: 'horizontal'