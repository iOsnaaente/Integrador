#
# Azimute content
<Azimute@MDCard>:
    orientation: 'vertical'
    #
    # Title label 
    MDLabel: 
        size_hint: 1, 0.1
        text: 'Azimute'
        font_style: 'H3'
        font_size: 18
        bold: True
        halign: 'center'
    #
    # Graph box     
    MDBoxLayout:
        id: graph 
        size_hint: 1, 0.9
        pos_hint: { 'rigth' : 1, 'top' : 1 }
        md_bg_color: [0,0,0,0]
